<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog 
        id="opportunityValueHelpDialog"
        title="Select Opportunity"
        contentWidth="600px"
        contentHeight="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <SearchField 
                    id="opportunityValueHelpSearch"
                    width="100%"
                    placeholder="Search by Opportunity Name..."
                    liveChange="onOpportunityValueHelpSearch"
                    search="onOpportunityValueHelpSearch" />
                <Table 
                    id="opportunityValueHelpTable"
                    mode="SingleSelectLeft"
                    items="{
                        path: '/Opportunities',
                        sorter: { path: 'opportunityName', descending: false }
                    }"
                    growing="true"
                    growingThreshold="50"
                    growingScrollToLoad="true">
                    <columns>
                        <Column width="30%">
                            <Text text="Opportunity ID" />
                        </Column>
                        <Column width="70%">
                            <Text text="Opportunity Name" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{sapOpportunityId}" />
                                <Text text="{opportunityName}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <beginButton>
            <Button text="Select" type="Emphasized" press="onOpportunityValueHelpConfirm" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onOpportunityValueHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

