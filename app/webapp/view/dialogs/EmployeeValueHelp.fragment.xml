<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog 
        id="employeeValueHelpDialog"
        title="Select Supervisor"
        contentWidth="600px"
        contentHeight="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <SearchField 
                    id="employeeValueHelpSearch"
                    width="100%"
                    placeholder="Search by Employee Name..."
                    liveChange="onEmployeeValueHelpSearch"
                    search="onEmployeeValueHelpSearch" />
                <Table 
                    id="employeeValueHelpTable"
                    mode="SingleSelectLeft"
                    items="{
                        path: '/Employees',
                        sorter: { path: 'fullName', descending: false }
                    }"
                    growing="true"
                    growingThreshold="50"
                    growingScrollToLoad="true">
                    <columns>
                        <Column width="30%">
                            <Text text="OHR ID" />
                        </Column>
                        <Column width="70%">
                            <Text text="Full Name" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{ohrId}" />
                                <Text text="{fullName}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <beginButton>
            <Button text="Select" type="Emphasized" press="onEmployeeValueHelpConfirm" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onEmployeeValueHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

