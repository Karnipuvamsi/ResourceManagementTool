<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog 
        id="projectValueHelpDialog"
        title="Select Project"
        contentWidth="600px"
        contentHeight="500px">
        <content>
            <VBox class="sapUiSmallMargin">
                <SearchField 
                    id="projectValueHelpSearch"
                    width="100%"
                    placeholder="Search by Project Name..."
                    liveChange="onProjectValueHelpSearch"
                    search="onProjectValueHelpSearch" />
                <Table 
                    id="projectValueHelpTable"
                    mode="SingleSelectLeft"
                    items="{
                        path: '/Projects',
                        sorter: { path: 'projectName', descending: false }
                    }"
                    growing="true"
                    growingThreshold="50"
                    growingScrollToLoad="true">
                    <columns>
                        <Column width="30%">
                            <Text text="Project ID" />
                        </Column>
                        <Column width="70%">
                            <Text text="Project Name" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{sapPId}" />
                                <Text text="{projectName}" />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
        <beginButton>
            <Button text="Select" type="Emphasized" press="onProjectValueHelpConfirm" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onProjectValueHelpCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

