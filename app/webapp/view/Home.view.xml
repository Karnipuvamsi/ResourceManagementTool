<mvc:View
    controllerName="glassboard.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:mdc="sap.ui.mdc"
    xmlns:table="sap.ui.mdc.table"
    height="100%"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <HBox
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignContent="Center"
                >
                    <HBox>
                        <Button
                            id="sideNavigationToggleButton"
                            icon="sap-icon://menu2"
                            type="Transparent"
                            press="onSideNavButtonPress"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </Button>
                        <Image
                            src="test-resources/sap/tnt/images/SAP_Logo.png"
                            decorative="false"
                            press="onLogoPressed"
                            tooltip="SAP Logo"
                            width="60px"
                            height="30px"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </Image>
                        <Text
                            text="Resource Management Tool"
                            class="sapUiH2"
                        />
                    </HBox>
                    <Button
                        id="uploadLogButton"
                        visible="{= ${message>/}.length > 0 }"
                        type="Emphasized"
                        press="onMessagePopoverPress"
                    />
                </HBox>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation
                id="sideNavigation"
                expanded="true"
                itemSelect="onItemSelect"
                selectedKey="home"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        key="home"
                        text="Home"
                        icon="sap-icon://home"
                    />

                    <tnt:NavigationListGroup text="Master Data Management">
                        <tnt:NavigationListItem
                            key="customers"
                            text="Customers"
                            icon="sap-icon://people-connected"
                        />
                        <tnt:NavigationListItem
                            key="opportunities"
                            text="Opportunities"
                            icon="sap-icon://building"
                        />
                        <tnt:NavigationListItem
                            key="projects"
                            text="Projects"
                            icon="sap-icon://business-objects-experience"
                        />
                        <tnt:NavigationListItem
                            key="demands"
                            text="Demands"
                            icon="sap-icon://business-objects-experience"
                        />
                        <!-- <tnt:NavigationListItem key="sapid" text="SAP ID" icon="sap-icon://key" /> -->
                        <tnt:NavigationListItem
                            key="employees"
                            text="Employees"
                            icon="sap-icon://employee"
                        />
                        <!-- <tnt:NavigationListItem key="verticals" text="Verticals" /> -->
                    </tnt:NavigationListGroup>

                    <tnt:NavigationListGroup text="Allocations">
                        <tnt:NavigationListItem
                            key="overview"
                            text="Allocations Overview"
                            icon="sap-icon://overview-chart"
                        />
                        <!-- <tnt:NavigationListItem key="requirements" text="Resource Requirements" icon="sap-icon://business-objects-experience" /> -->
                    </tnt:NavigationListGroup>

                    <tnt:NavigationListGroup text="Reports">
                        <tnt:NavigationListItem
                            key="employeeBenchReport"
                            text="Employee Bench Report"
                            icon="sap-icon://group"
                        />
                        <!-- <tnt:NavigationListItem
                            key="employeeProbableReleaseReport"
                            text="Employee Probable Release Report"
                            icon="sap-icon://calendar"
                        /> -->
                        <!-- <tnt:NavigationListItem
                            key="revenueForecastReport"
                            text="Revenue Forecast Report"
                            icon="sap-icon://money-bills"
                        /> -->
                        <tnt:NavigationListItem
                            key="employeeAllocationReport"
                            text="Employee Allocation Report"
                            icon="sap-icon://employee-approvals"
                        />
                        <tnt:NavigationListItem
                            key="employeeSkillReport"
                            text="Employee Skill Report"
                            icon="sap-icon://competencies"
                        />
                        <!-- <tnt:NavigationListItem
                            key="projectsNearingCompletionReport"
                            text="Projects Nearing Completion Report"
                            icon="sap-icon://complete"
                        /> -->
                    </tnt:NavigationListGroup>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="root1"
            >
                <pages>
                   <Page id="root1" showHeader="false" visible="true">
                        <!-- First Row -->
<HBox id="_homeTile1" justifyContent="Start" alignItems="Start">
    <VBox id="totalHeadVBox" class="benchC Card clickable">
        <Text id="totalHeadTitle" text="Total Head Count" class="myCardTitle"/>
        <Text id="totalHeadValue" text="{homeCounts>/totalHeadCount}" class="myCardValue"/>
    </VBox>
    <VBox id="allocatedVBox" class="allocatedC Card clickable">
        <Text id="allocatedTitle" text="Allocated Count" class="myCardTitle"/>
        <Text id="allocatedValue" text="{homeCounts>/allocatedCount}" class="myCardValue"/>
    </VBox>
    <VBox id="benchVBox" class="totalHeadC Card clickable">
        <Text id="benchTitle" text="Bench Count" class="myCardTitle"/>
        <Text id="benchValue" text="{homeCounts>/benchCount}" class="myCardValue"/>
    </VBox>
</HBox>
 
<!-- Second Row -->
<HBox id="_homeTile2" justifyContent="Start" alignItems="Start">
    <VBox id="unallocatedBenchVBox" class="unallocatedBenchC Card clickable">
        <Text id="unallocatedBenchTitle" text="Pre Allocated" class="myCardTitle"/>
        <Text id="unallocatedBenchValue" text="{homeCounts>/preAllocatedCount}" class="myCardValue"/>
    </VBox>
    <VBox id="unproductiveBenchVBox" class="unproductiveBenchC Card clickable">
        <Text id="unproductiveBenchTitle" text="Unproductive Bench" class="myCardTitle"/>
        <Text id="unproductiveBenchValue" text="{homeCounts>/unproductiveBenchCount}" class="myCardValue"/>
    </VBox>
    <VBox id="netBenchVBox" class="netBenchC Card clickable">
        <Text id="netBenchTitle" text="Inactive Bench" class="myCardTitle"/>
        <Text id="netBenchValue" text="{homeCounts>/onLeaveCount}" class="myCardValue"/>
    </VBox>
</HBox>
 
<!-- Third Row -->
<HBox id="_homeTile3" justifyContent="Start" alignItems="Start">
    <VBox id="demandsVBox" class="demandsC Card clickable">
        <Text id="demandsTitle" text="Demands Count" class="myCardTitle"/>
        <Text id="demandsValue" text="120" class="myCardValue"/>
    </VBox>
    <VBox id="yetToJoinVBox" class="yetToJoinC Card clickable">
        <Text id="yetToJoinTitle" text="Yet To Join" class="myCardTitle"/>
        <Text id="yetToJoinValue" text="40" class="myCardValue"/>
    </VBox>
    <VBox id="projectsEndingVBox" class="projectsEndingC Card clickable">
        <Text id="projectsEndingTitle" text="Projects Ending (In 2 Weeks)" class="myCardTitle"/>
        <Text id="projectsEndingValue" text="5" class="myCardValue"/>
    </VBox>
</HBox>
 
                    </Page>
 

                    <Page
                        id="customersPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="opportunitiesPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="projectsPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="demandsPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="employeesPage"
                        showHeader="false"
                    >
                    </Page>
                    <!-- âœ… REMOVED: <Page id="verticalsPage" title="Verticals" /> (Vertical is now an enum) -->
                    <Page
                        id="allocationPage"
                        showHeader="false"
                    >
                    </Page>
                    <!-- <Page id="requirementsPage" title="Requirements" /> -->
                    <!-- Report Pages -->
                    <Page
                        id="employeeBenchReportPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="employeeProbableReleaseReportPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="revenueForecastReportPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="employeeAllocationReportPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="employeeSkillReportPage"
                        showHeader="false"
                    >
                    </Page>
                    <Page
                        id="projectsNearingCompletionReportPage"
                        showHeader="false"
                    >
                    </Page>
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
