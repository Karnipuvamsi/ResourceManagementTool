<mvc:View
    controllerName="glassboard.controller.Home"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns:mdc="sap.ui.mdc"
    xmlns:table="sap.ui.mdc.table"
    height="100%"
>
    <tnt:ToolPage id="toolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <HBox
                    width="100%"
                    justifyContent="SpaceBetween"
                    alignContent="Center"
                >
                    <HBox>
                        <Button
                            id="sideNavigationToggleButton"
                            icon="sap-icon://menu2"
                            type="Transparent"
                            press="onSideNavButtonPress"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </Button>
                        <Image
                            src="test-resources/sap/tnt/images/SAP_Logo.png"
                            decorative="false"
                            press="onLogoPressed"
                            tooltip="SAP Logo"
                            width="60px"
                            height="30px"
                        >
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    priority="NeverOverflow"
                                />
                            </layoutData>
                        </Image>
                        <Text
                            text="Resource Management Tool"
                            class="sapUiH2"
                        />
                    </HBox>
                    <Button
                        id="uploadLogButton"
                        visible="{= ${message>/}.length > 0 }"
                        type="Emphasized"
                        press="onMessagePopoverPress"
                    />
                </HBox>
            </tnt:ToolHeader>
        </tnt:header>

        <tnt:sideContent>
            <tnt:SideNavigation
                id="sideNavigation"
                expanded="true"
                itemSelect="onItemSelect"
                selectedKey="home"
            >
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        key="home"
                        text="Home"
                        icon="sap-icon://home"
                    />

                    <tnt:NavigationListGroup text="Master Data Management">
                        <tnt:NavigationListItem
                            key="customers"
                            text="Customers"
                            icon="sap-icon://people-connected"
                        />
                        <tnt:NavigationListItem
                            key="opportunities"
                            text="Opportunities"
                            icon="sap-icon://building"
                        />
                        <tnt:NavigationListItem
                            key="projects"
                            text="Projects"
                            icon="sap-icon://business-objects-experience"
                        />
                        <tnt:NavigationListItem
                            key="demands"
                            text="Demands"
                            icon="sap-icon://business-objects-experience"
                        />
                        <!-- <tnt:NavigationListItem key="sapid" text="SAP ID" icon="sap-icon://key" /> -->
                        <tnt:NavigationListItem
                            key="employees"
                            text="Employees"
                            icon="sap-icon://employee"
                        />
                        <!-- <tnt:NavigationListItem key="verticals" text="Verticals" /> -->
                    </tnt:NavigationListGroup>

                    <tnt:NavigationListGroup text="Allocations">
                        <tnt:NavigationListItem
                            key="overview"
                            text="Allocations Overview"
                            icon="sap-icon://overview-chart"
                        />
                        <!-- <tnt:NavigationListItem key="requirements" text="Resource Requirements" icon="sap-icon://business-objects-experience" /> -->
                    </tnt:NavigationListGroup>

                    <tnt:NavigationListGroup text="Reports">
                        <tnt:NavigationListItem
                            key="employeeBenchReport"
                            text="Employee Bench Report"
                            icon="sap-icon://group"
                        />
                        <!-- <tnt:NavigationListItem
                            key="employeeProbableReleaseReport"
                            text="Employee Probable Release Report"
                            icon="sap-icon://calendar"
                        /> -->
                        <!-- <tnt:NavigationListItem
                            key="revenueForecastReport"
                            text="Revenue Forecast Report"
                            icon="sap-icon://money-bills"
                        /> -->
                        <tnt:NavigationListItem
                            key="employeeAllocationReport"
                            text="Employee Allocation Report"
                            icon="sap-icon://employee-approvals"
                        />
                        <tnt:NavigationListItem
                            key="employeeSkillReport"
                            text="Employee Skill Report"
                            icon="sap-icon://competencies"
                        />
                        <!-- <tnt:NavigationListItem
                            key="projectsNearingCompletionReport"
                            text="Projects Nearing Completion Report"
                            icon="sap-icon://complete"
                        /> -->
                    </tnt:NavigationListGroup>
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>

        <tnt:mainContents>
            <NavContainer
                id="pageContainer"
                initialPage="root1"
            >
                <pages>
                   <Page id="root1" showHeader="false">
                        <HBox id="_IDGenHBox7" justifyContent="Start" alignItems="Start">
                            <VBox id="_IDGenVBox170" class="benchC Card">
                                <Text id="_IDGenText95" text="Total Head Count" class="myCardTitle"/>
                                <Text id="_IDGenText160" text="{homeCounts>/totalHeadCount}" class="myCardValue"/>
                            </VBox>
                            <VBox id="_IDGenVBox10" class="allocatedC Card">
                                <Text id="_IDGenText9" text="Allocated Count" class="myCardTitle"/>
                                <Text id="_IDGenText10" text="{homeCounts>/allocatedCount}" class="myCardValue"/>
                            </VBox>
                            <VBox id="_IDGenVBox510" class="totalHeadC Card">
                                <Link id="_IDGenText59" text="Bench Count" class="myCardTitle" press="onBenchTilePress"/>
                                <Text id="_IDGenText150" text="{homeCounts>/benchCount}" class="myCardValue"/>
                            </VBox>
                        </HBox>
                        <HBox justifyContent="Start" alignItems="Start">
                            <VBox class="unallocatedBenchC Card">
                                <Text text="Pre Allocated" class="myCardTitle" />
                                <Text text="{homeCounts>/preAllocatedCount}" class="myCardValue" />
                            </VBox>
                            <VBox class="unproductiveBenchC Card">
                                <Text text="Unproductive Bench" class="myCardTitle" />
                                <Text text="{homeCounts>/unproductiveBenchCount}" class="myCardValue" />
                            </VBox>
                            <VBox class="netBenchC Card">
                                <Text text="Inactive Bench" class="myCardTitle"/>
                                <Text text="{homeCounts>/onLeaveCount}" class="myCardValue" />
                            </VBox>
                        </HBox>
                        <HBox justifyContent="Start" alignItems="Start">
                            <VBox class="demandsC Card">
                                <Text text="Demands Count" class="myCardTitle" />
                                <Text text="120" class="myCardValue" />
                            </VBox>
                            <VBox class="yetToJoinC Card">
                                <Text text="Yet To Join" class="myCardTitle" />
                                <Text text="40" class="myCardValue" />
                            </VBox>
                            <VBox class="projectsEndingC Card">
                                <Text text="Projects Ending (In 2 Weeks)" class="myCardTitle"/>
                                <Text text="5" class="myCardValue" />
                            </VBox>
                        </HBox>
                    </Page>
 

                    <Page
                        id="customersPage"
                        showHeader="false"
                    />
                    <Page
                        id="opportunitiesPage"
                        showHeader="false"
                    />
                    <Page
                        id="projectsPage"
                        showHeader="false"
                    />
                    <Page
                        id="demandsPage"
                        showHeader="false"
                    />
                    <Page
                        id="employeesPage"
                        showHeader="false"
                    />
                    <!-- âœ… REMOVED: <Page id="verticalsPage" title="Verticals" /> (Vertical is now an enum) -->
                    <Page
                        id="allocationPage"
                        showHeader="false"
                    />
                    <!-- <Page id="requirementsPage" title="Requirements" /> -->
                    <!-- Report Pages -->
                    <Page
                        id="employeeBenchReportPage"
                        showHeader="false"
                    />
                    <Page
                        id="employeeProbableReleaseReportPage"
                        showHeader="false"
                    />
                    <Page
                        id="revenueForecastReportPage"
                        showHeader="false"
                    />
                    <Page
                        id="employeeAllocationReportPage"
                        showHeader="false"
                    />
                    <Page
                        id="employeeSkillReportPage"
                        showHeader="false"
                    />
                    <Page
                        id="projectsNearingCompletionReportPage"
                        showHeader="false"
                    />
                </pages>
            </NavContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>
