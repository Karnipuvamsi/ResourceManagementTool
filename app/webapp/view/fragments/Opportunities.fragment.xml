<core:FragmentDefinition  
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:mdc="sap.ui.mdc"
    xmlns:table="sap.ui.mdc.table"
    xmlns:mdct="sap.ui.mdc.table"
    xmlns:mdcvh="sap.ui.mdc.valuehelp"
    xmlns:mdcvc="sap.ui.mdc.valuehelp.content"
    xmlns:layout="sap.f">
    <layout:DynamicPage
        id="opportunityDynamicPage"
        fitContent="false"
        preserveHeaderStateOnScroll="false"
        headerExpanded="true"
        toggleHeaderOnTitleClick="false">
        
        <!-- Optional Page Title -->
        <layout:title>
            <layout:DynamicPageTitle>
                <layout:heading>
                    <Title text="Opportunity Management" level="H2" />
                </layout:heading>
            </layout:DynamicPageTitle>
        </layout:title>
        
        <!-- ========== FILTERBAR ========== -->
        <layout:header>
            <layout:DynamicPageHeader pinnable="false">
                <VBox class="sapUiTinyMargin">
                    <mdc:FilterBar
                        id="opportunityFilterBar"
                        delegate='{
                            "name": "glassboard/delegate/OpportunitiesFilterBarDelegate",
                            "payload": {
                                "collectionPath": "Opportunities"
                            }
                        }'
                        search="onFilterSearch"
                        showAdaptFiltersButton="true"
                        showGoButton="true"
                        filterConditions="{filterModel>/Opportunities/conditions}"
                        p13nMode="Item,Value">
                        <!-- Static filter items - Default filters -->
                        <mdc:filterItems>

    <!-- ========== SAP OPPORTUNITY ID ========== -->
    <mdc:FilterField
        id="filterSapOppId"
        label="SAP Opp ID"
        width="200px"
        propertyKey="sapOpportunityId"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/sapOpportunityId}"
        valueHelp="vhSapOppId"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhSapOppId"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['sapOpportunityId','sfdcOpportunityId','opportunityName'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgSapOppId" title="Select SAP Opp ID">
                        <mdcvc:MDCTable keyPath="sapOpportunityId" descriptionPath="sapOpportunityId">
                            <mdc:Table
                                id="tblSAPOppVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                 p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['sapOpportunityId','opportunityName'] }
                                }"
                            >   <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                               </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="sapOpportunityId" header="SAP Opp ID">
                                        <Text text="{sapOpportunityId}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>

    <!-- ========== SFDC OPPORTUNITY ID ========== -->
    <mdc:FilterField
        id="filterSfdcOppId"
        label="SFDC Opp ID"
        width="200px"
        propertyKey="sfdcOpportunityId"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/sfdcOpportunityId}"
        valueHelp="vhSfdcOppId"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhSfdcOppId"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['sfdcOpportunityId','sapOpportunityId','opportunityName'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgSfdcOppId" title="Select SFDC Opp ID">
                        <mdcvc:MDCTable keyPath="sfdcOpportunityId" descriptionPath="sfdcOpportunityId">
                            <mdc:Table
                                id="tblSfdcOppVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['sfdcOpportunityId','opportunityName'] }
                                }"
                            >   <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                              </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="sfdcOpportunityId" header="SFDC Opp ID">
                                        <Text text="{sfdcOpportunityId}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>

    <!-- ========== OPPORTUNITY NAME (VH) ========== -->
    <mdc:FilterField
        id="filterOpportunityName"
        label="Opportunity Name"
        width="250px"
        propertyKey="opportunityName"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/opportunityName}"
        valueHelp="vhOpportunityName"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhOpportunityName"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['opportunityName','sapOpportunityId'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgOppName" title="Select Opportunity Name">
                        <mdcvc:MDCTable keyPath="opportunityName" descriptionPath="opportunityName">
                            <mdc:Table
                                id="tblOppNameVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['opportunityName'] }
                                }"
                            >   <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                              </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="sapOpportunityId" header="SAP Opp ID">
                                        <Text text="{sapOpportunityId}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>

    <!-- ========== BUSINESS UNIT (VH) ========== -->
    <mdc:FilterField
        id="filterBusinessUnit"
        label="Business Unit"
        width="200px"
        propertyKey="businessUnit"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/businessUnit}"
        valueHelp="vhBusinessUnit"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhBusinessUnit"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['businessUnit'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgBusinessUnit" title="Select Business Unit">
                        <mdcvc:MDCTable keyPath="businessUnit" descriptionPath="businessUnit">
                            <mdc:Table
                                id="tblBusinessUnitVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['businessUnit'] }
                                }"
                            >   <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                            </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="businessUnit" header="Business Unit">
                                        <Text text="{businessUnit}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>

   

    <!-- ========== SALES SPOC (VH) ========== -->
    <mdc:FilterField
        id="filterSalesSpoc"
        label="Sales SPOC"
        width="200px"
        propertyKey="salesSPOC"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/salesSPOC}"
        valueHelp="vhSalesSpoc"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhSalesSpoc"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['salesSPOC','opportunityName'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgSalesSpoc" title="Select Sales SPOC">
                        <mdcvc:MDCTable keyPath="salesSPOC" descriptionPath="salesSPOC">
                            <mdc:Table
                                id="tblSalesSpocVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['salesSPOC'] }
                                }"
                            >   <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                             </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="salesSPOC" header="Sales SPOC">
                                        <Text text="{salesSPOC}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>

    <!-- ========== DELIVERY SPOC (VH) ========== -->
    <mdc:FilterField
        id="filterDeliverySpoc"
        label="Delivery SPOC"
        width="200px"
        propertyKey="deliverySPOC"
        maxConditions="-1"
        conditions="{filterModel>/Opportunities/conditions/deliverySPOC}"
        valueHelp="vhDeliverySpoc"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhDeliverySpoc"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['deliverySPOC','opportunityName'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgDeliverySpoc" title="Select Delivery SPOC">
                        <mdcvc:MDCTable keyPath="deliverySPOC" descriptionPath="deliverySPOC">
                            <mdc:Table
                                id="tblDeliverySpocVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/OpportunitiesTableDelegate',
                                    payload: { collectionPath: 'Opportunities', searchKeys: ['deliverySPOC'] }
                                }"
                            >  <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                            </mdc:type>
                                <mdc:columns>
                                    <mdct:Column propertyKey="deliverySPOC" header="Delivery SPOC">
                                        <Text text="{deliverySPOC}" />
                                    </mdct:Column>
                                    <mdct:Column propertyKey="opportunityName" header="Opportunity Name">
                                        <Text text="{opportunityName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>


    <!-- ========== CUSTOMER (ASSOCIATION) ========== -->
    <mdc:FilterField
        id="filterOpportunityCustomer"
        label="Customer"
        width="250px"
        propertyKey="customerId"
        display="Description"
        valueHelp="vhOppCustomer"
        conditions="{filterModel>/Opportunities/conditions/customerId}"
    >
        <mdc:dependents>
            <mdc:ValueHelp
                id="vhOppCustomer"
                delegate="{
                    name: 'glassboard/delegate/SearchValueHelpDelegate',
                    payload: { searchKeys: ['SAPcustId','customerName'] }
                }"
            >
                <mdc:dialog>
                    <mdcvh:Dialog id="dlgOppCustomerVH" title="Select Customer">
                        <mdcvc:MDCTable keyPath="SAPcustId" descriptionPath="customerName">
                            <mdc:Table
                                id="tblOppCustomerVH"
                                autoBindOnInit="true"
                                selectionMode="Multi"
                                p13nMode="Column,Sort"
                                 enableAutoColumnWidth="true"
                                 threshold="20"
                                 filter="opportunityFilterBar"
                                 filterConditions="{filterModel>/Opportunities/conditions}"
                                width="100%"
                                delegate="{
                                    name: 'glassboard/delegate/CustomersTableDelegate',
                                    payload: { collectionPath: 'Customers', searchKeys: ['customerName','vertical'] }
                                }"
                            >  <mdc:type>
                                <table:GridTableType rowCountMode="Auto" />
                            </mdc:type>
                                <mdc:columns>
                                    <mdct:Column header="Customer ID" propertyKey="SAPcustId">
                                        <Text text="{SAPcustId}" />
                                    </mdct:Column>
                                    <mdct:Column header="Customer Name" propertyKey="customerName">
                                        <Text text="{customerName}" />
                                    </mdct:Column>
                                </mdc:columns>
                            </mdc:Table>
                        </mdcvc:MDCTable>
                    </mdcvh:Dialog>
                </mdc:dialog>
            </mdc:ValueHelp>
        </mdc:dependents>
    </mdc:FilterField>
    </mdc:filterItems>
</mdc:FilterBar>
 </VBox>
            </layout:DynamicPageHeader>
        </layout:header>
        
        <!-- ========== MAIN CONTENT ========== -->
        <layout:content>
            <VBox class="sapUiSmallMargin">
                <!-- ===== TABLE PANEL ===== -->
                <Panel class="sapUiResponsiveMargin" expandable="false">
                    <Toolbar>
                        <ToolbarSpacer />
                        <SearchField
                            id="opportunitySearchField"
                            width="300px"
                            placeholder="Search opportunities..."
                            liveChange="onOpportunitySearch"
                            search="onOpportunitySearch" />
                    </Toolbar>
                    <ScrollContainer height="220px" vertical="true" horizontal="false">
                        <mdc:Table
                            id="Opportunities"
                            header="Opportunities"
                            class="verticalsTable rowDetailToggleTable"
                            autoBindOnInit="false"
                            busyIndicatorDelay="0"
                            width="100%"
                            p13nMode="Column,Sort,Filter,Group"
                            selectionMode="Single"
                            delegate='{
                                "name": "glassboard/delegate/OpportunitiesTableDelegate",
                                "payload": {
                                    "collectionPath": "Opportunities"
                                }
                            }'
                            showRowCount="true"
                            threshold="20"
                            enableExport="true"
                            enableAutoColumnWidth="false"
                            filter="opportunityFilterBar"
                            filterConditions="{filterModel>/Opportunities/conditions}"
                            selectionChange="onSelectionChange"
                            type="ResponsiveTable">
                            <mdc:type>
                                <mdct:ResponsiveTableType />
                            </mdc:type>
                            <mdc:actions>
                                <SegmentedButton 
                                    selectedKey="less"
                                    selectionChange="onToggleRowDetail"
                                    tooltip="Toggle Row Details">
                                    <items>
                                        <SegmentedButtonItem key="more" icon="sap-icon://detail-more" tooltip="Show More"/>
                                        <SegmentedButtonItem key="less" icon="sap-icon://detail-less" tooltip="Show Less"/>
                                    </items>
                                </SegmentedButton>
                                <Button icon="sap-icon://delete" id="btnDelete_oppr" tooltip="Delete" press="onDeletePress" enabled="false" />
                                <SplitButton
                                    id="opportunityUpload"
                                    icon="sap-icon://upload"
                                    tooltip="Upload"
                                    type="Transparent"
                                    press="onUpload"
                                    arrowPress="onSplitButtonArrowPress"
                                />
                            </mdc:actions>
                        </mdc:Table>
                    </ScrollContainer>
                </Panel>
                
                <!-- ===== SPACE BETWEEN TABLE AND FORM ===== -->
                <HBox width="100%" class="extraSpace"><ToolbarSpacer /></HBox>
                
                <!-- ===== FORM PANEL ===== -->
                <Panel headerText="Opportunity Details" class="sapUiResponsiveMargin" expandable="false">
                      <!-- Header Toolbar with Buttons -->
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Opportunity Details" level="H2" />
                            <ToolbarSpacer />
                            <Button id="editButton_oppr" text="Edit" type="Emphasized" press="onEditOpportunityForm" enabled="false" class="sapUiSmallMarginEnd" />
                            <Button id="submitButton_oppr" text="Submit" type="Accept" press="onSubmitOpportunity" />
                            <Button id="cancelFormButton_oppr" text="Cancel" type="Reject" press="onCancelOpportunityForm" class="sapUiSmallMarginBegin" />
                            
                        </Toolbar>
                    </headerToolbar>
                    <VBox class="sapUiSmallMargin">
                        <HBox width="100%">
                            <!-- Left Column -->
                            <VBox width="50%" class="sapUiSmallMarginEnd">
                                <f:SimpleForm
                                    layout="ResponsiveGridLayout"
                                    editable="true"
                                    labelSpanL="3"
                                    labelSpanM="3"
                                    adjustLabelSpan="false"
                                    emptySpanL="1"
                                    emptySpanM="1"
                                    columnsL="1"
                                    columnsM="1"
                                    class="sapUiNoContentPadding">
                                    <Label text="Customer" required="true" />
                                    <Input 
                                        id="inputCustomerId_oppr" 
                                        width="100%"
                                        placeholder="Select Customer"
                                        showValueHelp="true"
                                        valueHelpRequest="onCustomerValueHelpRequest"
                                        required="true">
                                        <layoutData>
                                            <f:ColumnElementData cellsSmall="12" cellsLarge="12" />
                                        </layoutData>
                                    </Input>
                                    <Label text="SAP Opportunity ID" />
                                    <Input id="inputSapOppId_oppr" value="{opportunityModel>/sapOpportunityId}" width="100%" enabled="false" placeholder="Auto-generated" visible="false"/>
                                    <Label text="SFDC Opportunity ID" />
                                    <Input id="inputSfdcOppId_oppr" value="{opportunityModel>/sfdcOpportunityId}" width="100%" />
                                    <Label text="Opportunity Name" required="true" />
                                    <Input id="inputOppName_oppr" value="{opportunityModel>/opportunityName}" width="100%" required="true" />


                                    <Label text="Business Unit" required="true" />
                                    <Input id="inputBusinessUnit_oppr" value="{opportunityModel>/businessUnit}" width="100%" required="true" />
                                    <Label text=" Actual Probability %" required="true" />
                                    <Select id="inputProbability_oppr" selectedKey="{opportunityModel>/probability}" width="100%" required="true">
                                        <items>
                                            <core:Item key="" text="Select Probability..." />
                                            <core:Item key="0%" text="0%" />
                                            <core:Item key="33%" text="33%" />
                                            <core:Item key="85%" text="85%" />
                                            <core:Item key="100%" text="100%" />
                                        </items>
                                    </Select>
                                    <Label text="SFDC Probability %" required="true" />
                                    <Select id="inputStage_oppr" selectedKey="{opportunityModel>/Stage}" width="100%" required="true">
                                        <items>
                                            <core:Item key="" text="Select Probability..." />
                                            <core:Item key="0%" text="0%" />
                                            <core:Item key="33%" text="33%" />
                                            <core:Item key="85%" text="85%" />
                                            <core:Item key="100%" text="100%" />
                                        </items>
                                    </Select>
                                    
                                </f:SimpleForm>
                            </VBox>
                            
                            <!-- Right Column -->
                            <VBox width="50%" class="sapUiSmallMarginBegin">
                                <f:SimpleForm
                                    layout="ResponsiveGridLayout"
                                    editable="true"
                                    labelSpanL="3"
                                    labelSpanM="3"
                                    adjustLabelSpan="false"
                                    emptySpanL="1"
                                    emptySpanM="1"
                                    columnsL="1"
                                    columnsM="1"
                                    class="sapUiNoContentPadding">
                                    <Label text="Sales SPOC" required="true" />
                                    <Input 
                                        id="inputSalesSPOC_oppr" 
                                        value="{opportunityModel>/salesSPOC}" 
                                        width="100%" 
                                        placeholder="Select Sales SPOC"
                                        showValueHelp="true"
                                        valueHelpRequest="onEmployeeValueHelpRequest"
                                        required="true" />
                                    <Label text="Delivery SPOC" required="true" />
                                    <Input 
                                        id="inputDeliverySPOC_oppr" 
                                        value="{opportunityModel>/deliverySPOC}" 
                                        width="100%" 
                                        placeholder="Select Delivery SPOC"
                                        showValueHelp="true"
                                        valueHelpRequest="onEmployeeValueHelpRequest"
                                        required="true" />
                                    <Label text="Expected Start" required="true" />
                                    <DatePicker id="inputExpectedStart_oppr" value="{opportunityModel>/expectedStart}" valueFormat="yyyy-MM-dd" displayFormat="short" width="100%" required="true" />
                                    <Label text="Expected End" required="true" />
                                    <DatePicker id="inputExpectedEnd_oppr" value="{opportunityModel>/expectedEnd}" valueFormat="yyyy-MM-dd" displayFormat="short" width="100%" required="true" />
                                    <Label text="TCV" required="true" />
                                    <Input id="inputTCV_oppr" value="{opportunityModel>/tcv}" width="100%" type="Number" required="true" />
                                    <Label text="Currency" required="true" />
                                    <Select id="inputCurrency_oppr" selectedKey="{opportunityModel>/currency}" width="100%" required="true">
                                        <items>
                                            <core:Item key="" text="Select Currency..." />
                                            <core:Item key="USD" text="USD - US Dollar" />
                                            <core:Item key="EUR" text="EUR - Euro" />
                                            <core:Item key="GBP" text="GBP - British Pound" />
                                            <core:Item key="INR" text="INR - Indian Rupee" />
                                            <core:Item key="JPY" text="JPY - Japanese Yen" />
                                            <core:Item key="AUD" text="AUD - Australian Dollar" />
                                            <core:Item key="CAD" text="CAD - Canadian Dollar" />
                                            <core:Item key="CHF" text="CHF - Swiss Franc" />
                                            <core:Item key="CNY" text="CNY - Chinese Yuan" />
                                            <core:Item key="SGD" text="SGD - Singapore Dollar" />
                                        </items>
                                    </Select>
                                </f:SimpleForm>
                            </VBox>
                        </HBox>
                        
                      
                    </VBox>
                </Panel>
            </VBox>
        </layout:content>
    </layout:DynamicPage>
</core:FragmentDefinition>
